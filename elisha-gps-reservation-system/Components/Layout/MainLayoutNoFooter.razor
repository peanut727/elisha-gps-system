@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<div class="page">
    <AuthorizeView Roles="Admin">
        <Authorized>
            <div class="sidebar">
                <NavAdmin />
            </div>
            <main>
                <div class="content">
                    @Body
                </div>
            </main>
        </Authorized>
        <NotAuthorized>
            <main>
                <Topbar />
                <div class="content">
                    @Body
                </div>
            </main>
        </NotAuthorized>
    </AuthorizeView>
</div>